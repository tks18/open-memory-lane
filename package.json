{
  "name": "personal-memory-recorder-v2",
  "packageManager": "yarn@4.9.3",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "commitizen": "^4.3.1",
    "conventional-recommended-bump": "^11.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "standard-version": "^9.5.0"
  },
  "scripts": {
    "prepare": "husky install && husky add .husky/commit-msg 'npx --no-install commitlint --edit $1'",
    "init:cz": "commitizen init cz-conventional-changelog --yarn --dev --exact",
    "git:stage": "git add",
    "git:commit": "cz",
    "git:push": "git push --follow-tags origin dev",
    "release:pre": "standard-version --prerelease",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "version": "1.0.0"
}